<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.faars.promise30.Fragments.ChooseChildFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a child:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="16dp"/>

        <TextView
            android:id="@+id/profilePreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="16dp"/>

        <ListView
            android:id="@+id/lvRegisteredChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/orRegisterNewChildOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or register a new child"
            android:layout_gravity="center_horizontal"
            android:textColor="#2979FF"
            android:textSize="15dp"
            android:padding="16dp"
            android:clickable="true"/>

    </LinearLayout>

</FrameLayout>
