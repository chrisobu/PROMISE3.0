<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.faars.promise30.Fragments.ReviewVideoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="17dp"
            android:text="Review the video and consider the following points:"
            android:layout_marginBottom="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The child does not cry"
            android:layout_marginBottom="10dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The child is not disturbed"
            android:layout_marginBottom="10dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The video is at least 3 minutes long"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/review_continue_button"
            android:layout_width="150dp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Approve"
            android:layout_height="wrap_content" />


    </LinearLayout>

</FrameLayout>
